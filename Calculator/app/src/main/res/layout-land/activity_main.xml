<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:hint="这里将显示算式和结果"
        android:id="@+id/result_main" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="7"
        android:rowCount="5"
        android:paddingLeft="40dp">

        <Button
            android:text="1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/one"
            android:layout_column="0"
            android:layout_row="0"/>

        <Button
            android:text="2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/two"
            android:layout_column="1"
            android:layout_row="0"/>
        <Button
            android:text="3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/three"
            android:layout_column="2"
            android:layout_row="0"/>
        <Button
            android:text="+"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:layout_column="3"
            android:layout_row="0"/>
        <Button
            android:text="sin"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/sin"
            android:layout_column="4"
            android:layout_row="0"/>
        <Button
            android:text="X^Y"
            android:layout_width="80dp"
            android:layout_height="96dp"
            android:id="@+id/power"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_rowSpan="2"/>

        <Button
            android:text="CE"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/ce"
            android:layout_column="6"
            android:layout_row="0"/>

        <Button
            android:text="4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/four"
            android:layout_column="0"
            android:layout_row="1"/>

        <Button
            android:text="5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/five"
            android:layout_column="1"
            android:layout_row="1"/>
        <Button
            android:text="6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/six"
            android:layout_column="2"
            android:layout_row="1"/>
        <Button
            android:text="-"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/sub"
            android:layout_column="3"
            android:layout_row="1"/>
        <Button
            android:text="cos"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/cos"
            android:layout_column="4"
            android:layout_row="1"/>

        <Button
            android:text="DEL"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/del"
            android:layout_column="6"
            android:layout_row="1"/>

        <Button
            android:text="7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/seven"
            android:layout_column="0"
            android:layout_row="2"/>

        <Button
            android:text="8"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/eight"
            android:layout_column="1"
            android:layout_row="2"/>
        <Button
            android:text="9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/nine"
            android:layout_column="2"
            android:layout_row="2"/>
        <Button
            android:text="x"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/mul"
            android:layout_column="3"
            android:layout_row="2"/>
        <Button
            android:text="tan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/tan"
            android:layout_column="4"
            android:layout_row="2" />
        <Button
            android:text="√"
            android:layout_width="80dp"
            android:layout_height="96dp"
            android:id="@+id/radical"
            android:layout_column="5"
            android:layout_row="2"
            android:layout_rowSpan="2"/>
        <Button
            android:text="="
            android:layout_width="80dp"
            android:layout_height="94dp"
            android:id="@+id/calculate"
            android:layout_column="6"
            android:layout_row="2"
            android:layout_rowSpan="2"/>

        <Button
            android:text="0"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/zero"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="2"/>
        <Button
            android:text="."
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/dot"
            android:layout_column="2"
            android:layout_row="3"/>
        <Button
            android:text="/"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/division"
            android:layout_column="3"
            android:layout_row="3"/>
        <Button
            android:text="1/"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/reciprocal"
            android:layout_column="4"
            android:layout_row="3" />

        <Button
            android:text="单位换算"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/danwei"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnSpan="3"/>
        <Button
            android:text="进制转换"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/jinzhi"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_columnSpan="2"/>
        <Button
            android:text="BMI"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/bmi"
            android:layout_column="5"
            android:layout_row="4"
            android:layout_columnSpan="2"/>

    </GridLayout>

</LinearLayout>