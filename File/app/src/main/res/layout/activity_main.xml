<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
 tools:context="com.example.makyo.file.MainActivity">

    <Button
        android:id="@+id/ButtonWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ButtonRead"
        android:layout_alignBottom="@+id/ButtonRead"
        android:layout_alignStart="@+id/str"
        android:text="write"
        android:textAllCaps="false" />


<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ButtonRead"
    android:text="read"
    android:textAllCaps="false"
    android:layout_marginTop="64dp"
    android:layout_below="@+id/str"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="70dp"
    android:layout_marginEnd="70dp" />

    <EditText
        android:id="@+id/str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ButtonRead"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:ems="10" />
</RelativeLayout>