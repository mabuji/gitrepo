<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.makyo.player.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/musicList"
            android:textColor="#515463"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_mode"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#515463"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_weight="7"
        android:layout_marginTop="20dp"
        android:dividerHeight="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/textView_music_name"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_weight="0.5"
        android:progressDrawable="@drawable/style_seekbar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textView_current_time"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_duration"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:id="@+id/playmode"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cir" />
        <ImageButton
            android:id="@+id/previous"
            android:layout_weight="1"
            android:src="@drawable/previous"
            android:layout_width="0dp"
            android:backgroundTint="#00000000"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/next"
            android:layout_weight="1"
            android:src="@drawable/next"
            android:layout_width="0dp"
            android:backgroundTint="#00000000"
            android:layout_height="wrap_content" />



        <ImageView
            android:id="@+id/imageView_song_info"
            android:src="@drawable/music"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
